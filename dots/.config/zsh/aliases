# ================ aliases ================

alias plz='sudo'
alias ls='ls --color=auto'
alias lsa='ls -a'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ff='random_logo'
alias zed='zeditor'

alias cleanup="sudo pacman -Rsn $(pacman -Qtdq)"
alias rmpkg="yay -Rns"
alias cleanch="sudo pacman -Scc"
alias fixpacman="sudo rm /var/lib/pacman/db.lck"
alias update="sudo pacman -Syu"
alias jctl="journalctl -p 3 -xb"

# === Python Aliases ===

# Running code
alias py='python'
alias pyrun='python3 manage.py runserver' # For Django
alias pytest='python3 -m pytest'

# Pip Package Management
alias pi='pip install'
alias pir='pip install -r requirements.txt'
alias pu='pip uninstall'
alias pf='pip freeze > requirements.txt'
alias pl='pip list'

# venv
alias venv='python3 -m venv venv'
alias von='source venv/bin/activate'
alias voff='deactivate'

#clamav
alias scan="clear ; echo 'Scanning...' ; clamscan -r --bell --infected --exclude-dir='/home/jhonni/.cache' /home/jhonni ; echo 'Scan complete'"